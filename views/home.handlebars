<div class="container">
  <div class="row header hom">
    <div class="col-xs-12 col-sm-12">
      <h4>Welcome to your home page! <br>What would you like to do?</h4>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="circb">
        <img class="img-responsive" src="/images/movie-icon.png" alt="3 locos">
      </div>
      <div class="buttnb">
        <h4>Movies</h4>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="circb">
        <img class="img-responsive" src="/images/music-icon.png" alt="3 locos">
      </div>
      <div class="buttnb">
        <h4>Music</h4>
      </div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
      <div class="circb">
        <img id="tv" class="img-responsive" src="/images/tv-icon.png" alt="3 locos">
      </div>
      <div class="buttnb">
        <h4>TV</h4>
      </div>
    </div>
  </div>
  <div class="users">
    <div class="row">
      <div class="col-xs-6 col-sm-6">
        <h4>PARENTS</h4>
        <a href="/parents">
          <div class="shown">
            <img src="/images/user.png" alt="user">
            <p>User 1</p>
          </div>
        </a>
      </div>
      <div class="col-xs-6 col-sm-6">
        <h4>KIDS</h4>
        <a href="/kids">
          <div class="shown">
            <img src="/images/userkid.png" alt="user">
            <p>Kid 1</p>
          </div>
        </a>
      </div>
    </div>
  </div>
  <div class="recom">
    <h3>HIGHLIGHTS</h3>
    <div class="row rec">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {{#each index}}
        <a href="/details/{{ con_id }}"><img src="/images/movies/{{con_image}}" alt="{{con_name}}"></a>
        {{/each}}
      </div>
    </div>
  </div>
</div>
<footer>
  <div class="col-lg-4">
    <img class="img-responsive" src="/images/roku-bw.png" alt="roku">
  </div>
</footer>
