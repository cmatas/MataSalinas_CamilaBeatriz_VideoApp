<div class="container">
  <div class="row header par">
    <div class="col-xs-6 col-sm-2 inf">
      <h4>User 1</h4>
      <h4>The Blues <br> Brothers</h4>
    </div>
  </div>
  <div class="users">
    <h3>RECOMMENDED</h3>
    <div class="row">
      <div class="col-xs-6 col-sm-6">
        <img class="img-responsive" src="/images/movies/golden.jpg" alt="golden girls">
      </div>
      <div class="col-xs-6 col-sm-6">
        <img class="img-responsive" src="/images/movies/friends.jpg" alt="friends">
      </div>
    </div>
  </div>
  <div class="recom">
    <h3>LIST</h3>
    <div class="col-xs-6 col-sm-6 listbutton">
      <img class="img-responsive" src="/images/icons/like.png" alt="like">
      <h4>LIKE</h4>
    </div>
    <div class="col-xs-6 col-sm-6 listbutton">
      <img class="img-responsive" src="/images/icons/saved.png" alt="like">
      <h4>SAVED</h4>
    </div>
    <div class="col-xs-6 col-sm-6 listbutton">
      <img class="img-responsive" src="/images/icons/future.png" alt="like">
      <h4>FUTURE</h4>
    </div>
    <div class="col-xs-6 col-sm-6 listbutton">
      <img class="img-responsive" src="/images/icons/more.png" alt="like">
      <h4>MORE</h4>
    </div>
    <div class="row rec">
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <ul class="ages">
          <li>1950</li>
          <li>1960</li>
          <li>1970</li>
          <li>1980</li>
          <li>1990</li>
        </ul>
      </div>
      <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        {{#each index}}
        <a href="/details/{{ con_id }}"><img src="/images/movies/{{con_image}}" alt="{{con_name}}"></a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<footer>
  <div class="col-lg-4">
    <img class="img-responsive" src="/images/roku-bw.png" alt="roku">
  </div>
</footer>
